<table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Book Name</th>
          <th>Availabile</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      	<% @books.each do |book| %>
        <tr>
          <th scope="row">1</th>
          <td><%= book.id %></td>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.availability %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>